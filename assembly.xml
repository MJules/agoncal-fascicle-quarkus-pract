<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>quarkus-super-heroes-workshop</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>event-inventory</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>*.iml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>infrastructure</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>*.iml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>load-bookstore</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>*.iml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>rest-book</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>pom_temp.xml</exclude>
        <exclude>*.json</exclude>
        <exclude>*.yaml</exclude>
        <exclude>*.iml</exclude>
        <exclude>**/application.properties</exclude>
        <exclude>**/*.java</exclude>
        <exclude>**/target/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>rest-number</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>pom_temp.xml</exclude>
        <exclude>*.json</exclude>
        <exclude>*.yaml</exclude>
        <exclude>*.iml</exclude>
        <exclude>**/application.properties</exclude>
        <exclude>**/*.java</exclude>
        <exclude>**/target/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <includes>
        <include>.dockerignore</include>
        <include>.editorconfig</include>
        <include>.gitignore</include>
        <include>pom.xml</include>
        <include>README.md</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
